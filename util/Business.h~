#ifndef BUSINESS_H_SEEN
#define BUSINESS_H_SEEN

#include <string>
#include <vector>

#include "FunctionObjects.hxx"

#include "Review.hxx"

namespace util{

  struct Business{

    typedef std::set<util::Review*, util::sortByReviewDate> ReviewSet;

    std::string*              ID;
    std::string*              Name;
    std::vector<std::string>* Neighborhoods;
    std::string*              Address;
    std::string*              City;
    std::string*              State;
    double                    Latitude;
    double                    Longitude;
    float                     NStars;
    int                       NReviews;
    ReviewSet*                Reviews;
    std::vector<std::string>* Categories;
    bool                      IsOpen;

  };

  Business* GetDummyBusiness(){

    typedef std::set<util::Review*, util::sortByReviewDate> ReviewSet;

    Business* business = new Business;
    
    business->ID            = new std::string;
    business->Name          = new std::string;
    business->Address       = new std::string;
    business->City          = new std::string;
    business->State         = new std::string;
    business->Neighborhoods = new std::vector<std::string>;
    business->Categories    = new std::vector<std::string>;
    business->Reviews       = new ReviewSet;

    return business;

  }

}

#endif
