#ifndef USER_H_SEEN
#define USER_H_SEEN

#include <set>
#include <string>

#include "FunctionObjects.hxx"

#include "Review.hxx"

namespace util{

  struct User{

    typedef std::set<util::Review*, util::sortByReviewDate> ReviewSet;

    std::string*            ID;
    std::string*            Name;
    int                     NReviews;
    ReviewSet*              Reviews;
    double                  AverageStars;
    int                     NUseful;
    int                     NFunny;
    int                     NCool;

  };

  User* GetDummyUser(){

    typedef std::set<util::Review*, util::sortByReviewDate> ReviewSet;

    User* user = new User;

    user->ID      = new std::string;
    user->Name    = new std::string;
    user->Reviews = new ReviewSet;

    return user;

  }

}


#endif
